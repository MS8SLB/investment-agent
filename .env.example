# Copy this file to .env and fill in your values
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Starting virtual cash balance (default: 100000)
STARTING_CASH=100000

# Optional: Claude model to use (default: claude-opus-4-6)
CLAUDE_MODEL=claude-opus-4-6

# Scheduler settings (used by scheduler.py)
SCHEDULE_MONTHLY=true        # true = run once a month, false = run weekly
SCHEDULE_DAY_OF_MONTH=1      # Day of month to run (1â€“28), used when SCHEDULE_MONTHLY=true
SCHEDULE_DAY=monday          # Day of week: monday/tuesday/.../sunday (used when SCHEDULE_MONTHLY=false)
SCHEDULE_TIME=09:00          # Time in HH:MM 24h format
