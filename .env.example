# Copy this file to .env and fill in your values
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Polygon.io API key for market data fallback when Yahoo Finance fails.
# Free tier at https://polygon.io — provides end-of-day quotes and news.
# Leave blank to use Yahoo Finance only.
POLYGON_API_KEY=

# Optional: Starting virtual cash balance (default: 100000)
STARTING_CASH=100000

# Optional: Claude model to use (default: claude-sonnet-4-6)
# Sonnet is recommended — Opus hits rate limits quickly on free/tier-1 plans
CLAUDE_MODEL=claude-sonnet-4-6

# Optional: FRED API key for US macroeconomic indicators (GDP, CPI, unemployment, etc.)
# Free registration at https://fredapi.stlouisfed.org/docs/api/api_key.html
# Enables the get_economic_indicators tool in the agent.
FRED_API_KEY=

# Scheduler settings (used by scheduler.py)
SCHEDULE_MONTHLY=true        # true = run once a month, false = run weekly
SCHEDULE_DAY_OF_MONTH=1      # Day of month to run (1–28), used when SCHEDULE_MONTHLY=true
SCHEDULE_DAY=monday          # Day of week: monday/tuesday/.../sunday (used when SCHEDULE_MONTHLY=false)
SCHEDULE_TIME=09:00          # Time in HH:MM 24h format
